<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:drawableBottom="@drawable/baseline_people_24"
    app:cardCornerRadius="15dp"
    android:backgroundTint="#295A6C">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_below="@+id/titleTv"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="0dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="17dp"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="#6C83F3"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            tools:text="xuygjivydtrjhvkbjfjvknlwefidnfdwofdpofondafpofn3winjgkhhvkvkkkhvvjhjyfivo" />

        <TextView
            android:id="@+id/descriptionTv"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleTv"
            android:layout_marginStart="12dp"
            android:layout_marginTop="31dp"
            android:layout_toEndOf="@+id/imageView"
            android:text="TextView"
            android:textColor="#71E4A8"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/authorTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="41dp"
            android:textColor="#EA3AEA"
            android:textStyle="bold"
            tools:text="jgyyvhki" />

        <ImageView
            android:id="@+id/shareIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="58dp"
            android:layout_marginTop="7dp"
            app:srcCompat="@drawable/baseline_share_24" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/separatorColor" />
</androidx.cardview.widget.CardView>
</layout>